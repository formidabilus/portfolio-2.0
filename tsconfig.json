{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "sanity/tailwind.config.js",
    "sanity/schemas/social.js",
    "sanity/schemas/skill.js",
    "sanity/schemas/project.js",
    "sanity/schemas/pageInfo.js",
    "sanity/schemas/index.js",
    "sanity/schemas/experience.js"
  ],
  "exclude": ["node_modules"]
}
